<div class="container">
  <h2 class="text-center mb-4">Assignment Management</h2>

  <div class="col text-right mb-2">
    <div class="card">
      <div class="card-body d-flex justify-content-between align-items-center">
        <div>
          <h5 class="card-title mb-0">DESheets/Assignments</h5>
        </div>
        <div>
          <%= link_to "Create assignment", new_assignment_path(@assignment), class: "btn btn-outline-primary" %>
        </div>
      </div>
    </div>
  </div>

  <table class="table table-default table-striped">
    <thead class="thead-dark">
      <tr>
        <th>ID</th>
        <th>Employee</th>
        <th>Project</th>
        <th>Total hours worked</th>
        <th class="d-flex justify-content-center">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @assignments.each do |assignment| %>
        <tr>
          <td><%= link_to assignment.id , assignment_path(assignment.id ), class: "text-decoration-none" %></td>
          <td><%= assignment.employee.name %></td>
          <td><%= assignment.project.title %></td>
          <td><%= assignment.hours_worked %></td>
          <td class="d-flex justify-content-center">
            <%= link_to edit_assignment_path(assignment.id), class: "btn mr-2" do %>
              <i class="fas fa-edit"></i> Edit
            <% end %>
            <%= button_to assignment_path(assignment.id), method: :delete, data: { confirm: "Are you sure?" }, class: "btn" do %>
              <i class="fas fa-trash-alt"></i> Delete
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
