<div class="container">
  <% if current_user %>
    <div class="d-flex justify-content-center align-items-center">
      <h2>Welcome to Delta Exchange Sheet</h2>
    </div>

    <div class="text-center mt-4">
      <h5>
        <%= current_user.first_name %> <%= current_user.last_name %>
      </h5>
      <div class="d-flex justify-content-center gap-2">
        <%= link_to  edit_user_registration_path, class: "btn btn-outline-primary mr-2 mb-2" do %>
          <i class="fas fa-edit"></i> Edit Account
        <% end %>
        <%= button_to destroy_user_session_path, data: { turbo: "false" }, method: :delete, class: "btn btn-outline-danger mr-2 mb-2" do %>
          <i class="fas fa-trash-alt"></i> Log Out
        <% end %>
      </div>
    </div>
  <% else %>
    <div class="text-center mt-4">
      <%= link_to "Sign In", new_user_session_path, class: "btn btn-primary mr-2 mb-2" %>
      <%= link_to "Create Account", new_user_registration_path, class: "btn btn-success mb-2" %>
    </div>
  <% end %>
</div>
